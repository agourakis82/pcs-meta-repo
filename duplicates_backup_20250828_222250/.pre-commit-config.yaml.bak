repos:
  - repo: https://github.com/astral-sh/ruff-pre-commit
    rev: v0.5.7
    hooks:
      - id: ruff
        args: ["--extend-select", "ANN,TRY", "--show-fixes"]
      - id: ruff-format
  - repo: https://github.com/psf/black
    rev: 25.1.0
    hooks:
      - id: black
        language_version: python3
  - repo: https://github.com/PyCQA/isort
    rev: 6.0.1
    hooks:
      - id: isort
        args: ["--profile", "black"]
  - repo: https://github.com/adrienverge/yamllint
    rev: v1.37.1
    hooks:
      - id: yamllint
        files: '\.ya?ml$'
        # Use the local configuration file to relax overly strict rules
        args: ["-c", ".yamllint.yaml"]
  - repo: https://github.com/DavidAnson/markdownlint-cli2
    rev: v0.18.1
    hooks:
      - id: markdownlint-cli2
        additional_dependencies: ["markdownlint-cli2"]
        args: ["**/*.md"]
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v6.0.0
    hooks:
      - id: check-yaml
        # Exclude problematic metadata file from YAML syntax checks
        exclude: 'meta/metadata\.yaml'
      - id: end-of-file-fixer
      - id: trailing-whitespace
      - id: check-added-large-files
