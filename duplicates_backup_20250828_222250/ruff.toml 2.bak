exclude = ["**/*.ipynb", "**/.ipynb_checkpoints/**"]
target-version = "py310"

[lint]
# Mantenha o básico: erros, pyflakes e imports
select = ["E", "F", "I"]
# Ignore temporário do que está travando seu CI agora
ignore = [
  "E501",     # linhas longas
  "F401",     # imports não usados ocasionais
  "E402",     # import não no topo (há módulos com docstring longa antes)
  "TRY",      # toda a família de tryceratops (TRY003, TRY300, TRY400, etc.)
  "UP",       # toda a família de sugestões "UP0xx" por ora
]

# Annotations (ANN*) são barulhentas em notebooks/papers; ignore por diretório
[lint.per-file-ignores]
"notebooks/**" = ["ANN"]
"papers/**"    = ["ANN"]

[format]
quote-style = "double"
indent-style = "space"
docstring-code-format = true
line-ending = "auto"
